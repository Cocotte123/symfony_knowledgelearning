{% extends 'base.html.twig' %}

{% block title %}Votre compte{% endblock %}

{% block body %}
<main  class="container mx-auto p-2 text-center" style="width: 90%">


    <section class=" container text-center mt-5 mb-5" style="color:#00497c;">
        <h1 style="margin-bottom:50px;">Bonjour {{ user.firstName }} {{ user.lastName}}</h1>
        <a href="{{path('app_profile')}}" class="btn" style="width: 200px;border:solid #384050 1px;background-color:#384050; color:#f1f8fc;" aria-label="Retour à votre compte">Retour à votre compte</a>
    </section>
   
    


    <section class="container">
        <div class="mx-auto p-2" style="width: 90%;border:solid #384050 3px; margin-bottom:20px;color:#384050;">
       
           {{ form_start(userModifyForm) }}
            <div  class="row">
 
                <div class="col-md-6" style="margin-bottom:20px;">
                {{ form_row(userModifyForm.firstName) }}
                </div>
                <div class="col-md-6">
                {{ form_row(userModifyForm.lastName) }}
                </div>
            
             
                <div style="margin-bottom:20px;">
                {{ form_row(userModifyForm.update) }}
                </div>
          
            </div>  
            {{ form_end(userModifyForm) }}


        </div>
    </section>

    <section class="container">
        <div class="mx-auto p-2" style="width: 90%;border:solid #384050 3px; margin-bottom:20px;color:#384050;">
       
           {{ form_start(passwordModifyForm) }}
            <div  class="row">
 
            <div class="mx-auto" style="margin-bottom:20px;width:500px;">
            {{ form_row(passwordModifyForm.password) }}
            </div>
           
            
             
            <div>
            <button type="submit" class="btn" style="width: 200px;border:solid #384050 1px;background-color:#384050; color:#f1f8fc;" aria-label="Modifier">Modifier</button>
            </div>
          
            </div>  
            {{ form_end(passwordModifyForm) }}


        </div>
    </section>

    <section class="container">
        <div class="mx-auto p-2" style="width: 90%;border:solid #384050 3px; margin-bottom:20px;color:#384050;">
            <p>Après avoir modifié votre adresse mail, vous devrez réactiver votre compte.</p>
           {{ form_start(mailModifyForm) }}
            <div  class="row">
 
            <div class="mx-auto" style="margin-bottom:20px;width:500px;">
            {{ form_row(mailModifyForm.email) }}
            </div>
           
            
             
            <div>
            <button type="submit" class="btn" style="width: 200px;border:solid #384050 1px;background-color:#384050; color:#f1f8fc;" aria-label="Modifier">Modifier</button>
            </div>
          
            </div>  
            {{ form_end(mailModifyForm) }}


        </div>
    </section>

    
</main>
{% endblock %}