{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<main  class="container mx-auto p-2 text-center" style="width: 90%;border:solid black 1px;">

    <h1>Bonjour {{ user.firstName }} {{ user.lastName}}</h1>
    <h2>Détails de la commande n° {{ order }}</h2>
    

   <div class="container">
    
        <table class="table">
        <thead>
            <tr>
            <th scope="col">Formation</th>
            <th scope="col">Date d'expiration</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for learningContent in learningContents %}
            <tr>
           
            
            <th scope="row">{{ learningContent.learning }}</th>
            
            <th scope="row">Jamais</th>
            <th scope="row">
            {% if learningContent.repository == 'lesson' %}
                <div class="col">
                <a href="{{path('app_bought_lesson', {id:learningContent.learningId})}}" class="btn" style="width: 100px;border:solid black 1px;" aria-label="Suivre">Suivre</a>
                </div>
            {% else %}
                <div class="col">
                <a href="{{path('app_bought_cursus', {id:learningContent.learningId})}}" class="btn" style="width: 100px;border:solid black 1px;" aria-label="Suivre">Suivre</a>
                </div>
            {% endif %}
            </th>
 
            </tr>
        {% endfor %}
        </tbody>
        </table>

    </div>
            
   

    
</main>
{% endblock %}
