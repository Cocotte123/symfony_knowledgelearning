{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<main  class="container mx-auto p-2 text-center" style="width: 90%;">


    <section class=" container text-center mt-5 mb-5" style="color:#00497c;">
        <h1 style="margin-bottom:50px;">Bonjour {{ user.firstName }} {{ user.lastName}}</h1>
        <a href="{{path('app_profile')}}" class="btn" style="width: 200px;border:solid #384050 1px;background-color:#384050; color:#f1f8fc;" aria-label="Retour à votre compte">Retour à votre compte</a>
    </section>
    
   
    <div class="container"  style="color:#384050;">
        <h2  style="margin-bottom:30px;">Vos commandes</h2>
    
        <table class="table">
        <thead>
            <tr>
            <th scope="col" style="color:#82b864;font-size:20px;">Numéro de commande</th>
            <th scope="col" style="color:#82b864;font-size:20px;">Créé le</th>
            <th scope="col" style="color:#82b864;font-size:20px;">Montant</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
            <th scope="row" style="color:#384050;">{{ order.id }}</th>
            <th scope="row" style="color:#384050;">{{ order.created_at|date('d-m-Y') }}</th>
            <th scope="row" style="color:#384050;">{{order.total}} €</th>
            <th scope="row">
                <div class="col">
                <a href="{{path('app_profile_orderdetails', {id:order.id})}}" class="btn" style="width: 200px;border:solid #384050 1px;background-color:#384050; color:#f1f8fc;" aria-label="Consulter">Consulter</a>
                </div>
            </th>
 
            </tr>
        {% endfor %}
        </tbody>
        </table>

    </div>

    
    
</main>
{% endblock %}
