{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<main  class="container mx-auto p-2 text-center" style="width: 90%;border:solid black 1px;">


    <h1>{{ user.firstName }} {{ user.lastName}}</h1>
    <a href="{{path('app_profile')}}" class="btn" style="width: 200px;border:solid black 1px;" aria-label="Retour à mon compte">Retour à mon compte</a>
    <h2>Vos commandes</h2>
   
    <div class="container">
    
        <table class="table">
        <thead>
            <tr>
            <th scope="col">Numéro de commande</th>
            <th scope="col">Créé le</th>
            <th scope="col">Montant</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
            <th scope="row">{{ order.id }}</th>
            <th scope="row">{{ order.created_at|date('d-m-Y') }}</th>
            <th scope="row">{{order.total}} €</th>
            <th scope="row">
                <div class="col">
                <a href="{{path('app_profile_orderdetails', {id:order.id})}}" class="btn" style="width: 100px;border:solid black 1px;" aria-label="Consulter">Consulter</a>
                </div>
            </th>
 
            </tr>
        {% endfor %}
        </tbody>
        </table>

    </div>

    
    
</main>
{% endblock %}
